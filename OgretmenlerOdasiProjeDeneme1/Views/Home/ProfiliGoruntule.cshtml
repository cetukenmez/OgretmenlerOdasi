@using OOdasi.Entity
@model UserInfo
@{
    ViewBag.Title = "ProfiliGoruntule";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h2>
    @Html.DisplayFor(t => t.UserName) @Html.DisplayFor(t => t.UserLastname)'(n)in Profili</h2>

@using (Html.BeginForm())
{
@Html.HiddenFor(t => t.UserId)
@Html.HiddenFor(t => t.UserSehirId)
@Html.HiddenFor(t => t.UserPass)
@Html.HiddenFor(t => t.ilanSayisi)
@Html.HiddenFor(t => t.RoleId)
@Html.HiddenFor(t => t.UserUyeDate)
@Html.HiddenFor(t => t.UserPhoto)
@Html.AntiForgeryToken()
    <div>
        <label>@ViewBag.Mesaj</label>
    </div>
    <table class="table table-striped table-hover table-condensed table-responsive table-bordered">
        <tr>
            <td>Adı : </td>
            <td>@Html.DisplayFor(t => t.UserName, new { @class = "form-control", @style = "width:200px", required = "required" })</td>
        </tr>
        <tr>
            <td>Soyadı : </td>
            <td>@Html.DisplayFor(t => t.UserLastname, new { @class = "form-control", @style = "width:200px", required = "required" })</td>
        </tr>
        <tr>
            <td>Doğum Tarihi : </td>
            <td>@Html.DisplayFor(t => t.UserAge, new { @class = "form-control", @style = "width:200px", required = "required" })</td>
        </tr>
        <tr>
            <td>Mevzun Olduğun Lise : </td>
            <td>@Html.DisplayFor(t => t.UserLise, new { @class = "form-control", @style = "width:200px", required = "required" })</td>
        </tr>
        <tr>
            <td>Üniversite : </td>
            <td>@Html.DisplayFor(t => t.UserUniversite, new { @class = "form-control", @style = "width:200px", required = "required" })</td>
        </tr>
        <tr>
            <td>Universitede Okuduğun Bölüm : </td>
            <td>@Html.DisplayFor(t => t.UserBolum, new { @class = "form-control", @style = "width:200px", required = "required" })</td>
        </tr>
        <tr>
            <td>Biografisi : </td>
            <td>@Html.DisplayFor(t => t.UserBio, new { @class = "form-control", @style = "width:200px", @required = "required" })</td>
        </tr>
        <tr>
            <td colspan="2">
                <a href="~/Home/Index" class="btn btn-danger"> Geri Dön</a>
            </td>
        </tr>
    </table>

    }
