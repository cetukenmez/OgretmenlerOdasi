@using OOdasi.Repository
@using OOdasi.Entity
@model UserInfo



    <form method="get" action="~/Home/Iletisim">

        @Html.HiddenFor(t => t.UserId)
        @Html.HiddenFor(t => t.UserSehirId)
        @Html.HiddenFor(t => t.UserPass)
        @Html.HiddenFor(t => t.ilanSayisi)
        @Html.HiddenFor(t => t.RoleId)
        @Html.HiddenFor(t => t.UserUyeDate)
        @Html.HiddenFor(t => t.UserPhoto)
        @Html.AntiForgeryToken()
        <div>
            <label>@ViewBag.Mesaj</label>
        </div>
        <table class="table table-striped table-hover table-condensed table-responsive table-bordered">
            <tr>
                <td>Mail Adresi :  </td>
                <td>@Html.DisplayFor(t => t.UserMail, new { @class = "form-control", @style = "width:200px", required = "required" })</td>
            </tr>
            <tr>
                <td>Telefon : </td>

                <td>@Html.DisplayFor(t => t.UserPhone@*.Insert(7, "xx xx").Remove(12, 4)*@, new { @class = "form-control", @style = "width:200px", required = "required" })</td>
            </tr>
            <tr>
                <td colspan="2">
                    <a href="~/Home/Index" class="btn btn-danger"> Geri Dön</a>
                </td>
            </tr>
        </table>


    </form>
