@using OOdasi.Entity
@using GridMvc.Html
@model IEnumerable<UserInfo>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Üye Listesi</h2>

@Html.Grid(Model).Columns(column =>
{
    column.Add(t => t.UserId).Titled("Üye ID").SetWidth(30);
    column.Add(t => t.UserName).Titled("Üye Adı").SetWidth(30);
    column.Add(t => t.UserLastname).Titled("Üye Soyadı").SetWidth(30);
    column.Add(t => t.UserMail).Titled("Üye Mail").SetWidth(30);
    column.Add(t => t.Sehirler.SehirAdi).Titled("Şehir").SetWidth(30);
    column.Add(t => t.UserRole.RoleName).Titled("Rolü").SetWidth(30);
    column.Add(t => t.UserUyeDate).Titled("Kayıt Tarihi").SetWidth(30);
    column.Add(t => t.ilanSayisi).Titled("İlan Sayisi").SetWidth(30);
    column.Add()
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(10)
    .RenderValueAs(o => Html.ActionLink("Edit", "Edit", "User", new { id = o.UserId }, new { @class = "btn btn-danger" }));
}).WithPaging(12).Sortable(true).WithMultipleFilters()